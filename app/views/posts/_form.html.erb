   <%= f.error_notification %>
      <div class="field">
         <div class="control">
            <%= f.input :post , label: "Post your secrets" , input_html: { class: "textarea"},
                wrapper: false, label_html: {class: "label"},placeholder: "Your secret here..." ,autofocus:true %>
          </div>
        </div>
    <%= f.button :submit,class: "button is-info" %>
<% end %>